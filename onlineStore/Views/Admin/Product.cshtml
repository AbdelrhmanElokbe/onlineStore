@model IEnumerable<onlineStore.DAL.Tbl_Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Products</h2>


<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Product Details
        <a href="../Admin/AddProduct" class="btn btn-info pull-right fa fa-plus dashBG">Add New Product</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @{ int count = 1;}
                        @foreach (var item in Model)
                        {

                    <tr>
                        <td>@(count)</td>
                        <td>@item.ProductName</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@item.Description</td>
                        <td>
                            @Html.ActionLink("Edit", "ProductEdit", new {ProductId = item.ProductId })
                        </td>

                    </tr>
                            count++;
                        }

                </tbody>
            </table>
        </div>

    </div>
</div>

